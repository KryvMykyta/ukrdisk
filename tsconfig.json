{
    "compilerOptions": {
      "experimentalDecorators": true,
      "types": [],
      "target": "es6",
      "lib": ["es2019"],
      "module": "commonjs",
      "skipLibCheck": true,
      "strict": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "outDir": "./dist",
      "baseUrl": "./src",
      "paths": {
        "@/*": ["*"]
      }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }